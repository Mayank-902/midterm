pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'maven:3.8.1-jdk-11'
        WORKSPACE_DIR = PWD()   // Use PWD() to get the current workspace directory
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    // Pull Docker image
                    docker.image(DOCKER_IMAGE).pull()
                    
                    // Run Maven build inside Docker container
                    docker.image(DOCKER_IMAGE).inside("-v /root/.m2:/root/.m2 -w ${WORKSPACE_DIR}") {
                        bat 'mvn clean install'
                    }
                }
            }
        }
        
        // Add other stages as needed (e.g., test, deploy)
    }
    
    post {
        success {
            echo 'Build and tests passed. Ready for deployment.'
        }
        failure {
            echo 'Build or tests failed. Review the logs for details.'
        }
    }
}
