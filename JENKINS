pipeline {
    agent {
        docker {
            image 'maven:3.8.1-jdk-11'
            args '-v /root/.m2:/root/.m2'
        }
    }
    environment {
        PATH = "C:/Maven/apache-maven-3.9.5/bin$PATH"
        // Add other environment variables as needed
    }
    stages {
        stage('Build') {
            steps {
               bat "C:\\Windows\\System32\\cmd.exe /c mvn clean install"
            }
        }

        stage('Test') {
            steps {
               bat "C:\\Windows\\System32\\cmd.exe /c mvn test"
            }
        }
    }

    post {
        success {
            echo 'Build and tests passed. Ready for deployment.'
        }
        failure {
            echo 'Build or tests failed. Review the logs for details.'
        }
    }
}
