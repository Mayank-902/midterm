pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'maven:3.8.1-jdk-11'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    // Pull Docker image
                    docker.image(DOCKER_IMAGE).pull()

                    // Get the absolute path of the current workspace
                    def workspacePath = pwd()

                    // Run Maven build inside Docker container
                    docker.image(DOCKER_IMAGE).inside("-v /root/.m2:/root/.m2 -w ${workspacePath}") {
                        sh 'mvn clean install'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and tests passed. Ready for deployment.'
        }
        failure {
            echo 'Build or tests failed. Review the logs for details.'
        }
    }
}
